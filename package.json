{
  "name": "tiny-promisify",
  "version": "1.0.0",
  "description": "Tiny library to promisify functions expecting node-style callbacks",
  "keywords": [
    "promise",
    "promisify",
    "callback",
    "async",
    "es6",
    "node"
  ],
  "license": "WTFPL",
  "author": {
    "name": "Gabriel Montes",
    "email": "<gabriel@utoctadel.com.ar>"
  },
  "main": "dist/index.js",
  "repository": "gabmontes/tiny-promisify",
  "scripts": {
    "lint": "eslint lib",
    "test": "mocha --compilers js:babel-register",
    "coverage": "nyc --reporter=lcov --reporter=text npm test",
    "build": "babel --presets latest --plugins transform-runtime -d dist/ lib/",
    "prepublish": "npm run lint && npm test && npm run build"
  },
  "dependencies": {
    "babel-runtime": "^6.11.6"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-latest": "^6.14.0",
    "babel-preset-latest-minimal": "^1.1.1",
    "babel-register": "^6.14.0",
    "chai": "^3.5.0",
    "eslint": "^3.8.1",
    "mocha": "^3.0.2",
    "nyc": "^8.3.1"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
